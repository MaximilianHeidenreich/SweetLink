# Spacefile Docs: https://go.deta.dev/docs/spacefile/v0
v: 0
app_name: "SweetLink"
icon: "./assets/SweetLink - Logo@512w.png"
micros:
  - name: api
    src: ./api
    path: api
    engine: custom
    public_routes:
      - "/auth/*"
      - "/telemetry/*"
    commands:
      #- apt-get update
      - apt-get -y install zip
      - curl -L --fail --location --progress-bar --output out.zip https://github.com/denoland/deno/releases/download/v1.28.3/deno-x86_64-unknown-linux-gnu.zip
      - unzip -d ./ -o out.zip
      - chmod +x ./deno
      - ./deno bundle mod.ts bundle.ts
    include:
      - deno
      - bundle.ts
    presets:
      env:
        - name: DENO_DIR
          description: deno config dir
          default: "/tmp/deno_dir"
    run: ./deno run --allow-env --allow-read --allow-net bundle.ts
  - name: frontend
    primary: true
    src: ./frontend
    engine: nodejs16
    public_routes:
      - "/go/*"
    commands:
     - npm install
     - npm run build
    include:
     - build
     - package.json
     - package-lock.json
    run: node build